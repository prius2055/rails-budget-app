<p style="color: green"><%= notice %></p>



<% if user_signed_in? %>
  <h1>Expenses</h1>
  <div id="expenses">
    <% @expenses.each do |expense| %>
      <%= render expense %>
      <p>
        <%= link_to "Show this expense", expense %>
      </p>
    <% end %>
  </div>
  <%= link_to "New expense", new_expense_path %>

<% else %>
  <%= button_to "Sign in", new_user_session_path %> 
<% end %>
